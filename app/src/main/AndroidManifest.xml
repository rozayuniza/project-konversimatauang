<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.sandec.konversimatauangasing">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme"

        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="jelly_bean">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IdrEuro"
            android:label="Rupiah ke Euro"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".IdrGbp"
            android:label="Rupiah ke Pounds"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".IdrMyr"
            android:label="Rupiah ke Ringgit"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".IdrUsd"
            android:label="Rupiah ke Dollar"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".IdrYen"
            android:label="Rupiah ke Yen"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>